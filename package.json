{
  "name": "YourAppName",
  "version": "1.0.0",
  "description": "A simple Electron app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "electron": "^19.0.0",
    "electron-builder": "^23.0.0"
  },
  "build": {
    "appId": "your.app.id",
    "productName": "YourProductName",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  }
}
